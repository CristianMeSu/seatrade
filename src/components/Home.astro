---
import Map from "./Map";
import BgMap from "../assets/images/bg-map.jpg";
import Arrivals from "./Arrivals";
import Carousel from "./Carousel";
import Popup from "./Popup";
---

<div
  class="parent h-screen grid grid-rows-8 grid-cols-16 bg-cover bg-center"
  style={`background-image: url(${BgMap.src});`}
>
  <div class="map row-span-5 col-span-13 relative containerMap h-full w-full">
    <Map client:only />
    <Popup />
  </div>
  <div class="arrivals row-span-5 col-span-3 bg-transparent">
    <Arrivals client:only />
  </div>
  <div class="carousel row-span-3 col-span-16 bg-transparent">
    <Carousel client:load />
  </div>
</div>
